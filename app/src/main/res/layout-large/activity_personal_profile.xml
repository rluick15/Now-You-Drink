<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.richluick.nowyoudrink.ui.PersonalProfileActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="404px"
            android:layout_height="404px"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/usernameSpace"
            android:textSize="55sp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:textColor="@color/main_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userImageView" />

    </LinearLayout>

    <TextView
        android:id="@+id/fullNameSpace"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:layout_below="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/emailSpace"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:layout_below="@+id/fullNameSpace"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/hometownSpace"
        android:text=""
        android:textColor="@color/main_color"
        android:textSize="30sp"
        android:layout_below="@+id/emailSpace"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/websiteSpace"
        android:text=""
        android:textColor="@color/main_color"
        android:textSize="30sp"
        android:layout_below="@+id/hometownSpace"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
