<resources>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/subtitle_text_color</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ImageButtonAppTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="auth_title_text">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">55sp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="auth_background_image">
        <item name="android:contentDescription">@string/desc_background_image</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="auth_message_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/message_text_font_size</item>
        <item name="android:lineSpacingExtra">@dimen/message_text_line_spacing</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="auth_lists_friends">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@android:id/empty</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:dividerHeight">1.0sp</item>
        <item name="android:divider">@color/main_color</item>
    </style>


    <style name="Theme.Nowyoudrink" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_nowyoudrink</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Nowyoudrink</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Nowyoudrink</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Nowyoudrink</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Nowyoudrink</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Nowyoudrink</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_nowyoudrink</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_nowyoudrink</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Nowyoudrink</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Nowyoudrink.Overflow</item>
    </style>

    <style name="Theme.Nowyoudrink.Overflow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>

    <style name="ActionBar.Solid.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_nowyoudrink</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_nowyoudrink</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_nowyoudrink</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Nowyoudrink</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Nowyoudrink.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Nowyoudrink.TitleTextStyle">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ActionBar.Transparent.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_nowyoudrink</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Nowyoudrink</item>
    </style>

    <style name="PopupMenu.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_nowyoudrink</item>
    </style>

    <style name="DropDownListView.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_nowyoudrink</item>
    </style>

    <style name="ActionBarTabStyle.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_nowyoudrink</item>
    </style>

    <style name="DropDownNav.Nowyoudrink" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_nowyoudrink</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_nowyoudrink</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_nowyoudrink</item>
    </style>

    <style name="ProgressBar.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_nowyoudrink</item>
    </style>

    <style name="ActionButton.CloseMode.Nowyoudrink" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_nowyoudrink</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Nowyoudrink.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Nowyoudrink</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Nowyoudrink</item>
    </style>

    <style name="auth_drinker_text_box">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@color/secondary_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">@dimen/drinker_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/drinker_horizontal_margin</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="auth_group_titles">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/group_titles_margin</item>
    </style>


</resources>
